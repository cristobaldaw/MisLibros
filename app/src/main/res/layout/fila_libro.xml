<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_height="90dp"
        android:layout_marginTop="17dp"
        android:id="@+id/img_libro"
        android:layout_marginStart="20dp"
        android:layout_width="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY" />

    <TextView
        android:text="Titulo del libro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_libro"
        android:layout_marginStart="19dp"
        android:id="@+id/txt_titulo"
        android:layout_alignTop="@+id/img_libro" />

    <TextView
        android:text="Autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_autor"
        android:layout_below="@+id/txt_titulo"
        android:layout_alignStart="@+id/txt_titulo" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rt_nota"
        android:layout_below="@+id/txt_autor"
        android:layout_toEndOf="@+id/img_libro"
        android:isIndicator="true" />
</RelativeLayout>
